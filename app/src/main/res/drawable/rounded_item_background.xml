<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Light gray shadow -->
            <corners android:radius="12dp"/> <!-- Soft rounded corners -->
        </shape>
    </item>

    <!-- Main Card -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#CCC5C5"/> <!-- White background for clean look -->
            <corners android:radius="0dp"/> <!-- Matching rounded corners -->
            <stroke android:color="#000000" android:width="1dp"/> <!-- Subtle border -->
        </shape>
    </item>

</layer-list>
